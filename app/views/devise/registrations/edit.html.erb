<h2>Мой профиль</h2>

<%= form_for resource, :as => resource_name,
             :url => registration_path(resource_name),
             :html => { :method => :put } do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %>

  <%= f.label :password %>
  <%= f.password_field :password, :autocomplete => 'off' %>
  <span class="help-inline">Оставьте пустым, если не хотите его менять.</span>

  <%= f.label :password_confirmation, 'Подтверждение пароля' %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :current_password, 'Текущий пароль' %>
  <%= f.password_field :current_password %>
  <span class="help-inline">
    Введите свой текущий пароль, чтобы подтвердить изменения.
  </span>

  <div class="form-actions">
    <%= f.submit 'Сохранить изменения', :class => 'btn btn-primary' %>
  </div>
<% end %>

<h3>Удалить учётную запись</h3>

<p>
  Надоело?
  <%= link_to 'Удалите свою учётную запись', registration_path(resource_name),
              :data => { :confirm => 'Вы уверены?' }, :method => :delete %>.
</p>

<%= link_to 'Назад', :back %>
